@model InputDataViewModel


<h2>@Translation.ADMIN : Data.</h2>

<form action="Index" method="post" class="form-horizontal" role="form">
    <h4>@Translation.MODIFY.</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Url" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Url" class="form-control" type="text"/>
            <span asp-validation-for="Url" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Data" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <textarea asp-for="Data" class="form-control" style="min-width: 600px; height:400px" cols="50" rows="50"></textarea>
            <span asp-validation-for="Data" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">@Translation.SUBMIT</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}