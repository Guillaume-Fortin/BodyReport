@model BodyExerciseViewModel
@{
    ViewData["Title"] = Translation.BODY_EXERCISES;
}

<h2>@Translation.ADMIN : @ViewData["Title"]. @Translation.CREATE</h2>

<form asp-controller="Admin" asp-action="CreateBodyExercise" method="post" enctype="multipart/form-data" class="form-horizontal" role="form">
    <h4>@Translation.CREATE_NEW.</h4>
    <hr />
    <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>

    <input asp-for="Id" hidden="hidden"/>

    <div class="form-group">
        <label asp-for="MuscleId" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="MuscleId" asp-items="ViewBag.Muscles"></select>
            <span asp-validation-for="MuscleId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">@Translation.CHOOSE_FILE : @Translation.IMAGE</label>
        <div class="col-md-10">
            <input type="file" id="imageFile" name="imageFile" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">@Translation.SUBMIT</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
