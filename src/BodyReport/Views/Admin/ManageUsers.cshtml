@using System.Security.Claims

@model IEnumerable<UserViewModel>
@{
}

<h2>@Translation.ADMIN : @Translation.USERS.</h2>

<div>
    <h4>@Translation.LIST_OF_USERS</h4>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th>@Translation.ACTION</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@item.Id">@Translation.EDIT</a>
                    <a asp-action="SuspendUser" asp-route-id="@item.Id">@Translation.SUSPEND</a>
                </td>
            </tr>
        }
    </table>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}